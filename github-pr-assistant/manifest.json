{
  "manifest_version": 3,
  "name": "GitHub PR Review Assistant",
  "version": "1.0.0",
  "description": "AI-powered pull request review assistant that enhances GitHub with smart summaries, impact scoring, and review analytics",
  "permissions": [
    "storage",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": [
        "src/scripts/highlighter.js",
        "src/scripts/content.js"
      ],
      "css": ["src/styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "options_page": "src/options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://github.com/*"]
    }
  ]
}
